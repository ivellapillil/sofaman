#
# Sample sofa model that exercises all the supported elements.
#

import "simple_all.sofa"
import style "default.css"

actor Client
actor RelationshipManager

class Person:
    attributes:
        name: 
            cardinality: 1
            type: String
    operations:
        - "getName() -> String"

interface Product:
    attributes:
        name: 
            cardinality: 1
            type: String
        is_active:
            cardinality: 0..1
            type: Boolean

relation Person --> Product:
    source:
        cardinality: 0..1
    target:
        cardinality: 1..1

